---
---
{% assign listPages = "" | split: ','%}
{% if site.collections %}
    {% assign collections = site.collections | sort: 'weight' %}
    {% for collection in collections %}
        {% if collection.label != "posts" %}
            {% assign items = site[collection.label] | sort: "weight" %}
            {% for item in items %}
                {% if item.hidden != true %}
                    {% assign listPages = listPages | push: item %}
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endif %}
[
{% for thing in listPages %}
    {
        "title"    : "{{ thing.title | escape }}",
        "url"      : "{{ thing.url | absolute_url }}",
        "excerpt"  : "{{ thing.content | strip_html | strip | strip_newlines | escape | truncatewords: 15 }}"
    }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
